import sys

from prometheus_client import multiprocess
from prometheus_client import CollectorRegistry, make_wsgi_app
from xandikos.prometheus import DEFAULT_PROMETHEUS_DIR

import optparse
import sys

from xandikos import __version__
parser = optparse.OptionParser(version='.'.join(map(str, __version__)))
parser.add_option("-l", "--listen_address", dest="listen_address",
                  default="localhost",
                  help="Binding IP address.")
parser.add_option("-p", "--port", dest="port", type=int,
                  default=8000,
                  help="Port to listen on.")
parser.add_option("-d", "--prometheus-directory",
                  default=DEFAULT_PROMETHEUS_DIR,
                  dest="prometheus_dir",
                  help="Path to prometheus statistics.")

options, args = parser.parse_args()
from wsgiref.simple_server import make_server

registry = CollectorRegistry()
multiprocess.MultiProcessCollector(registry, options.prometheus_dir)
app = make_wsgi_app(registry)

server = make_server(options.listen_address, options.port, app)
server.serve_forever()
